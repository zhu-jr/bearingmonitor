/* pages/warning/m2/m2.wxss */



.box1 {
  display: flex;
  justify-content: space-evenly;
  box-sizing: border-box;
  height:100rpx;
}

.title {
  width: 70%;
  height: 30px;
  line-height: 40px;
  font-size: 22px;
  font-weight: bold;
  text-indent: 1em;
  color: #237ab7;
  text-align: center;
  transform: translateX(-15%);
}

.circleContainer {
  width: 100%;
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 140px;
  box-sizing: border-box;
  padding: 10px;
}

.circle {
  height: 120px;
  width: 120px;
  border-radius: 60%;
  background: orange;
  display: flex;
  justify-content: center;
  align-items: center;
}

.innerCircle {
  height: 110px;
  width: 110px;
  border-radius: 50%;
  background: white;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 20px;
}
